root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = off

[*.java]
indent_style = tab
indent_size = 4
# noinspection EditorConfigKeyCorrectness
continuation_indent_size = 4
ij_continuation_indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{xml, sql, js, jsx, html, sass, scss, css}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
